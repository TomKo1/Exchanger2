<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:padding="@dimen/nav_header_vertical_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/circle_pic_size_drawer"
        android:layout_height="@dimen/circle_pic_size_drawer"
        android:layout_gravity="center"
        android:id="@+id/circleView"
        android:src="@drawable/sample_profile_pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sample_user_name"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/text_size"
        android:id="@+id/txtProfName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


</LinearLayout>